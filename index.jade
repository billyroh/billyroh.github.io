    section.schedule: .container-fluid
      h2 Schedule
      .row: .col-xs-12.col-md-6: ul
        each item in schedule 
          if item.type
            li
              .time
                h4
                  | #{item.time}<br>
                  | #{item.type}
              h4
                a(href='https://www.twitter.com/#{item.handle}') #{item.name} &middot; @#{item.handle}
              h3 #{item.title}
              p #{item.description}
          else
            li.no-description
              .time: h4 #{item.time}
              h3 #{item.title}
    footer: .container-fluid
      .row.between-xs.middle-sm
        .col-xs-1.col-sm-7: ul
          li: a(href='') Intro
          li: a(href='') Schedule
          li: a(href='') About
          li: a(href='') Get Involved
          li: a(href='') Past Events
        .col-xs-12.col-sm-5.text-right: a.button.primary(href='https://ti.to/november')
          p Buy Waffle - $10
          small Ticket Included
